---
import Arrow from '../assets/icones/icon_arrowline.svg';
const { href, text, variant, classes } = Astro.props;
const variantClass = {
  default: 'border border-(--color-pink) hover:shadow-[inset_0_0_0_8px_#feaa9b]',
  dark: 'bg-black text-white',
  outlined: 'text-white border border-white hover:shadow-[inset_0_0_0_8px_white]'
}
---
<a
  class:list={[
    "inline-flex items-center gap-4 px-6 py-4 text-xs font-bold uppercase tracking-wide transition duration-300 ease-in-out lg:px-8 lg:py-6 lg:text-sm",
    variantClass[variant] || variantClass["default"],
    classes
  ]}
  href={href}
>
  <Arrow/> { text }
</a>